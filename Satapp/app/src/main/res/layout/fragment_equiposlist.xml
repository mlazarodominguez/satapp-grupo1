<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <Button
        android:id="@+id/buttonBorrarEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Borrar"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEquipo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewEquipo"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewTituloEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewEquipo"
        app:layout_constraintTop_toTopOf="@+id/imageViewEquipo" />

    <Button
        android:id="@+id/buttonEditMomentaneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Editar"
        app:layout_constraintBottom_toTopOf="@+id/buttonBorrarEquipo"
        app:layout_constraintEnd_toEndOf="@+id/buttonBorrarEquipo" />


</androidx.constraintlayout.widget.ConstraintLayout>
