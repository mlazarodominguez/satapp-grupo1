<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="364dp"
        android:layout_height="93dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/ivAvatarLista"
                app:layout_constraintTop_toBottomOf="@+id/ivNombreLista" />

            <Button
                android:id="@+id/btnEliminarUser"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@android:drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivAvatarLista"
                android:layout_width="89dp"
                android:layout_height="87dp"
                android:layout_margin="0dp"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/ivNombreLista"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_margin="@dimen/text_margin"
                android:layout_marginStart="24dp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintBottom_toBottomOf="@+id/ivAvatarLista"
                app:layout_constraintStart_toEndOf="@+id/ivAvatarLista"
                app:layout_constraintTop_toTopOf="@+id/ivAvatarLista"
                app:layout_constraintVertical_bias="0.784" />

            <Button
                android:id="@+id/btnValidar"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="Validar"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/ivNombreLista"
                app:layout_constraintTop_toTopOf="@+id/ivNombreLista" />

            <TextView
                android:id="@+id/tvEmailLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/ivNombreLista"
                app:layout_constraintStart_toEndOf="@+id/ivAvatarLista"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
