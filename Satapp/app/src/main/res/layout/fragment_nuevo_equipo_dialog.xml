<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.NuevoEquipoDialogFragment">


    <EditText
        android:id="@+id/editTextNombreEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDescripcionEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Descripcion"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/editTextUbicacionEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ubicacion"
        app:layout_constraintEnd_toEndOf="@+id/editTextDescripcionEquipo"
        app:layout_constraintStart_toStartOf="@+id/editTextDescripcionEquipo"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescripcionEquipo" />

    <ImageView
        android:id="@+id/imageViewNuevoEquipo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/editTextUbicacionEquipo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextUbicacionEquipo"
        app:layout_constraintTop_toBottomOf="@+id/editTextUbicacionEquipo"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNombreEquipo"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreEquipo"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreEquipo" />


</androidx.constraintlayout.widget.ConstraintLayout>